<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/eventTitleEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titel"
        android:inputType="text"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/eventDateEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Datum (TT.MM.JJJJ)"
        android:inputType="date"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/eventTimeEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zeit (HH:mm)"
        android:inputType="time"/>

    <Spinner
        android:id="@+id/eventTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/eventNotesEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notizen"
        android:inputType="textMultiLine"
        android:minLines="2" />

    <Spinner
        android:id="@+id/eventColorSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</LinearLayout>